# =============================================================================
# DATABASE CONFIGURATION (Required)
# =============================================================================
# Primary database URL for Prisma
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# PostgreSQL URLs for different purposes
POSTGRES_URL="postgresql://username:password@host:port/database?sslmode=require"
POSTGRES_URL_NON_POOLING="postgresql://username:password@host:port/database?sslmode=require"
POSTGRES_PRISMA_URL="postgresql://username:password@host:port/database?sslmode=require&pool_timeout=30"

# Individual PostgreSQL connection details (if needed)
POSTGRES_USER="your_username"
POSTGRES_HOST="your_host"
POSTGRES_PASSWORD="your_password"
POSTGRES_DATABASE="your_database_name"
POSTGRES_URL_NO_SSL="postgresql://username:password@host:port/database"

# =============================================================================
# AUTHENTICATION (Required for login functionality)
# =============================================================================
# Generate a secure random string for AUTH_SECRET
# You can use: openssl rand -base64 32
AUTH_SECRET="your-auth-secret-key-here"

# Google OAuth credentials (required for Google login)
AUTH_GOOGLE_ID="your-google-oauth-client-id"
AUTH_GOOGLE_SECRET="your-google-oauth-client-secret"

# =============================================================================
# FILE UPLOAD (Required for room image uploads)
# =============================================================================
# Vercel Blob storage token for file uploads
BLOB_READ_WRITE_TOKEN="vercel_blob_rw_your_token_here"

# =============================================================================
# PAYMENT GATEWAY (Required for booking payments)
# =============================================================================
# Midtrans payment gateway credentials
NEXT_PUBLIC_MIDTRANS_CLIENT_KEY="your-midtrans-client-key"
MIDTRANS_SERVER_KEY="your-midtrans-server-key"
